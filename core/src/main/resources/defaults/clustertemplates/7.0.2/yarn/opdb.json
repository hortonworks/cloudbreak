{
  "name": "Operational Database for YCloud",
  "description": "",
  "type": "OPERATIONALDATABASE",
  "cloudPlatform": "YARN",
  "distroXTemplate": {
    "cluster": {
      "blueprintName": "CDP 1.2 - Operational Database: Apache HBase"
    },
    "instanceGroups": [
      {
        "name": "master",
        "nodeCount": 2,
        "recoveryMode": "MANUAL",
        "template": {
          "rootVolume": {
            "size": 50
          },
          "yarn": {
            "cpus": 4,
            "memory": 32768
          }
        },
        "type": "CORE"
      },
      {
        "name": "gateway",
        "nodeCount": 1,
        "recoveryMode": "MANUAL",
        "template": {
          "rootVolume": {
            "size": 50
          },
          "yarn": {
            "cpus": 4,
            "memory": 8192
          }
        },
        "type": "GATEWAY"
      },
      {
        "name": "leader",
        "nodeCount": 1,
        "recoveryMode": "MANUAL",
        "template": {
          "rootVolume": {
            "size": 50
          },
          "yarn": {
            "cpus": 4,
            "memory": 8192
          }
        },
        "type": "CORE"
      },
      {
        "name": "worker",
        "nodeCount": 3,
        "recoveryMode": "MANUAL",
        "template": {
          "rootVolume": {
            "size": 50
          },
          "yarn": {
            "cpus": 4,
            "memory": 8192
          }
        },
        "type": "CORE"
      }
    ]
  }
}
