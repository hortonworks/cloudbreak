{
  "name": "CDP 1.2 - Data Mart template for Azure",
  "description": "",
  "type": "DATAMART",
  "cloudPlatform": "AZURE",
  "distroXTemplate": {
    "cluster": {
      "blueprintName": "CDP 1.2 - Data Mart: Apache Impala, Hue"
    },
    "instanceGroups": [
      {
        "name": "master",
        "template": {
          "attachedVolumes": [
            {
              "count": 1,
              "size": 100,
              "type": "Standard_LRS"
            }
          ],
          "azure": {
            "availabilitySet": {
              "name": "",
              "faultDomainCount": 2,
              "updateDomainCount": 20
            }
          },
          "instanceType": "Standard_D12_v2",
          "rootVolume": {
            "size": 50
          }
        },
        "nodeCount": 1,
        "type": "GATEWAY",
        "recoveryMode": "MANUAL",
        "securityGroup": {
          "securityRules": [
            {
              "subnet": "0.0.0.0/0",
              "ports": [
                "9443",
                "443",
                "22"
              ],
              "protocol": "tcp"
            }
          ]
        }
      },
      {
        "name": "coordinator",
        "template": {
          "attachedVolumes": [
            {
              "count": 1,
              "size": 300,
              "type": "Standard_LRS"
            }
          ],
          "azure": {
            "availabilitySet": {
              "name": "",
              "faultDomainCount": 2,
              "updateDomainCount": 20
            }
          },
          "instanceType": "Standard_D3_v2",
          "rootVolume": {
            "size": 50
          }
        },
        "nodeCount": 1,
        "type": "CORE",
        "recoveryMode": "MANUAL",
        "securityGroup": {
          "securityRules": [
            {
              "subnet": "0.0.0.0/0",
              "ports": [
                "22"
              ],
              "protocol": "tcp"
            }
          ]
        }
      },
      {
        "name": "executor",
        "template": {
          "attachedVolumes": [
            {
              "count": 1,
              "size": 300,
              "type": "Standard_LRS"
            }
          ],
          "azure": {
            "availabilitySet": {
              "name": "",
              "faultDomainCount": 2,
              "updateDomainCount": 20
            }
          },
          "instanceType": "Standard_D3_v2",
          "rootVolume": {
            "size": 50
          }
        },
        "nodeCount": 2,
        "type": "CORE",
        "recoveryMode": "MANUAL",
        "securityGroup": {
          "securityRules": [
            {
              "subnet": "0.0.0.0/0",
              "ports": [
                "22"
              ],
              "protocol": "tcp"
            }
          ]
        }
      }
    ]
  }
}
