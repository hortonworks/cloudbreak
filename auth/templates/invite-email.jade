doctype html
html
head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(content='width=device-width, minimal-ui, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;', name='viewport')
    meta(content='telephone=no', name='format-detection')
    title Invitation
    style(type='text/css').
      p {
      margin: 0 0 25px 0;
      padding: 0;
      }
      a[x-apple-data-detectors] {
      color: inherit !important;
      text-decoration: none !important;
      font-size: inherit !important;
      font-family: inherit !important;
      font-weight: inherit !important;
      line-height: inherit !important;
      }
      table td {
      border-collapse: collapse;
      }
      table {
      mso-table-lspace: 0pt;
      mso-table-rspace: 0pt;
      }
      body {
      -webkit-text-size-adjust: 100%;
      }
      ul li {
      font-size: 16px;
      line-height: 24px;
      color: #333333;
      font-family: Arial, Helvetica, sans-serif;
      }
      * {
      -webkit-text-size-adjust: none
      }
      @media only screen and (max-width: 640px) {
      *[class].deviceWidth {
      width: 440px!important;
      padding: 0;
      }
      *[class].deviceWidth1 {
      width: 410px !important;
      }
      *[class].deviceWidth2 {
      width: 380px !important;
      }
      *[class].deviceWidth4 {
      width: 100% !important;
      }
      *[class].top-pad {
      padding-top: 15px !important;
      }
      *[class].block {
      display: block !important;
      margin: 0 auto !important;
      text-align:left !important;
      }
      *[class].responsive img {
      width: 100%;
      height: auto;
      }
      *[class].fontt {
      font-size:25px !important;
      }
      *[class].hide {
      display:none !important;
      }
      }
      @media only screen and (max-width: 479px) {
      *[class].deviceWidth {
      width: 280px!important;
      }
      *[class].deviceWidth1 {
      width: 250px !important;
      }
      *[class].deviceWidth2 {
      width: 248px !important;
      }
      }
  body(style='font-size:16px; line-height:24px; color:#333333; font-family:Arial, Helvetica, sans-serif; ')
