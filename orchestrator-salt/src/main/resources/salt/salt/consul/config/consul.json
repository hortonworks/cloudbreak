{
  {% if is_server %}"bootstrap_expect": {{ bootstrap_expect }},
  "server": true,
  "ui": true, {% endif %}
  "advertise_addr": "{{ advertise_addr }}",
  "data_dir": "/opt/consul",
  "client_addr": "0.0.0.0",
  "recursors": {{ recursors | json }},
  "disable_update_check": true,
  "retry_join": {{ retry_join | json }},
  "ports": {
    "DNS": 53,
    "HTTP": 8500,
    "HTTPS": -1
  },
  "dns_config": {
    "allow_stale": true,
    "max_stale": "5m",
    "node_ttl": "1m"
  },
  "node_name": "{{ node_name }}"
}
