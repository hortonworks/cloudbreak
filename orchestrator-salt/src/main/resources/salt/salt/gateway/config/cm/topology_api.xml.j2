                 <value>enabled=true;maxFailoverAttempts=0;failoverSleep=1000</value>
             </param>
             {%- endif %}
             {% if 'SCHEMA-REGISTRY' in exposed and 'SCHEMA_REGISTRY_SERVER' in salt['pillar.get']('gateway:location') -%}
             <param>
                 <name>SCHEMA-REGISTRY</name>
                 <value>enabled=true;maxFailoverAttempts=3;failoverSleep=1000;enableLoadBalancing=true</value>
             </param>
             {%- endif %}
             {% if 'HBASEJARS' in exposed and 'MASTER' in salt['pillar.get']('gateway:location') -%}
             <param>
                <name>HBASEJARS</name>
                <value>enabled=true;maxFailoverAttempts=3;failoverSleep=1000</value>
             </param>
             {%- endif %}
             {% if 'LIVY_FOR_SPARK3_API' in exposed and 'LIVY_SERVER_FOR_SPARK3' in salt['pillar.get']('gateway:location') -%}
             <param>
               <name>LIVY_FOR_SPARK3</name>
               <value>enabled=true;maxFailoverAttempts=3;failoverSleep=1000</value>
             </param>
            {%- endif %}
            {% if 'SSB-MVE-API' in exposed and 'MATERIALIZED_VIEW_ENGINE' in salt['pillar.get']('gateway:location') -%}
            <param>
              <name>SSB-MVE-API</name>
              <value>enabled=true;maxFailoverAttempts=3;failoverSleep=1000</value>
            </param>
            {%- endif %}
            {% if 'SSB-SSE-API' in exposed and 'STREAMING_SQL_ENGINE' in salt['pillar.get']('gateway:location') -%}
            <param>
              <name>SSB-SSE-API</name>
              <value>enabled=true;maxFailoverAttempts=3;failoverSleep=1000</value>
            </param>
            {%- endif %}
            {% if 'SPARKHISTORYUI' in exposed and 'SPARK_YARN_HISTORY_SERVER' in salt['pillar.get']('gateway:location') -%}
            <param>
              <name>SPARKHISTORYUI</name>
              <value>enabled=true;maxFailoverAttempts=3;failoverSleep=1000</value>
            </param>
            {%- endif %}
            {% if 'SPARK3HISTORYUI' in exposed and 'SPARK3_YARN_HISTORY_SERVER' in salt['pillar.get']('gateway:location') -%}
            <param>
              <name>SPARK3HISTORYUI</name>
