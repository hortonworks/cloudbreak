                <value>enabled=true;maxFailoverAttempts=3;failoverSleep=1000</value>
                {%- endif %}
            </param>
            {%- endif %}
            {% if 'NIFI_REST' in exposed and 'NIFI_NODE' in salt['pillar.get']('gateway:location') -%}
             <param>
