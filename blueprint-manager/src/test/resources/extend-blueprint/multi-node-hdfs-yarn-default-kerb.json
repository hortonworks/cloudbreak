{
  "Blueprints": {
    "blueprint_name": "multi-node-hdfs-yarn",
    "security": {
      "type": "LDAP"
    },
    "stack_name": "HDP",
    "stack_version": "2.1"
  },
  "configurations": [
    {
      "global": {
        "properties": {
          "nagios_contact": "admin@localhost"
        }
      }
    },
    {
      "hdfs-site": {
        "properties": {
          "dfs.datanode.data.dir": "/mnt/fs1/,/mnt/fs2/"
        }
      }
    },
    {
      "yarn-site": {
        "properties": {
          "yarn.nodemanager.local-dirs": "/mnt/fs1/,/mnt/fs2/"
        }
      }
    },
    {
      "kerberos-env": {
        "properties": {
          "realm": "APACHE.EXAMPLE.COM",
          "kdc_type": "mit-kdc",
          "kdc_hosts": "hostname.node.dc1.consul",
          "admin_server_host": "hostname.apache.example.com"
        }
      }
    },
    {
      "krb5-conf": {
        "properties": {
          "domains": "apache.example.com",
          "manage_krb5_conf": "true"
        }
      }
    }
  ],
  "host_groups": [
    {
      "cardinality": "1",
      "components": [
        {
          "name": "NAMENODE"
        },
        {
          "name": "GANGLIA_SERVER"
        },
        {
          "name": "HISTORYSERVER"
        },
        {
          "name": "SECONDARY_NAMENODE"
        },
        {
          "name": "RESOURCEMANAGER"
        },
        {
          "name": "HISTORYSERVER"
        },
        {
          "name": "NAGIOS_SERVER"
        },
        {
          "name": "ZOOKEEPER_SERVER"
        },
        {
          "name": "KERBEROS_CLIENT"
        }
      ],
      "name": "master"
    },
    {
      "cardinality": "2",
      "components": [
        {
          "name": "DATANODE"
        },
        {
          "name": "GANGLIA_MONITOR"
        },
        {
          "name": "HDFS_CLIENT"
        },
        {
          "name": "NODEMANAGER"
        },
        {
          "name": "YARN_CLIENT"
        },
        {
          "name": "MAPREDUCE2_CLIENT"
        },
        {
          "name": "ZOOKEEPER_CLIENT"
        },
        {
          "name": "KERBEROS_CLIENT"
        }
      ],
      "name": "slave_1"
    }
  ]
}