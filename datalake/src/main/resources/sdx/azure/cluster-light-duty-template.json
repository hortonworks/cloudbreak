{
  "cluster": {
    "blueprintName": "CDP 1.0 - SDX Light Duty: Apache Hive Metastore, Apache Ranger, Apache Atlas",
    "validateBlueprint": false,
    "gateway": {
      "topologies": [
        {
          "topologyName": "dp-proxy",
          "exposedServices": [
            "ALL"
          ]
        }
      ],
      "ssoType": "SSO_PROVIDER"
    }
  },
  "customDomain": {
    "domainName": "sdx",
    "hostgroupNameAsHostname": true
  },
  "instanceGroups": [
    {
      "name": "idbroker",
      "template": {
        "instanceType": "Standard_D12_v2",
        "attachedVolumes": [
          {
            "count": 1,
            "size": 100,
            "type": "standard"
          }
        ],
        "rootVolume": {
          "size": 50
        }
      },
      "nodeCount": 1,
      "type": "CORE",
      "recoveryMode": "MANUAL",
      "recipeNames": [],
      "securityGroup": {
        "securityRules": [
          {
            "subnet": "0.0.0.0/0",
            "ports": [
              "22"
            ],
            "protocol": "tcp"
          }
        ]
      }
    },
    {
      "name": "master",
      "template": {
        "instanceType": "Standard_D12_v2",
        "attachedVolumes": [
          {
            "count": 1,
            "size": 100,
            "type": "standard"
          }
        ],
        "rootVolume": {
          "size": 50
        }
      },
      "nodeCount": 1,
      "type": "GATEWAY",
      "recoveryMode": "MANUAL",
      "recipeNames": [],
      "securityGroup": {
        "securityRules": [
          {
            "subnet": "0.0.0.0/0",
            "ports": [
              "9443"
            ],
            "protocol": "tcp"
          },
          {
            "subnet": "0.0.0.0/0",
            "ports": [
              "443"
            ],
            "protocol": "tcp"
          },
          {
            "subnet": "0.0.0.0/0",
            "ports": [
              "22"
            ],
            "protocol": "tcp"
          }
        ]
      }
    }
  ]
}