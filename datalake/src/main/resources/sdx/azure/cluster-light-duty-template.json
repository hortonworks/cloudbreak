{
  "cluster": {
    "blueprintName": "CDP 1.1 - SDX Light Duty: Apache Hive Metastore, Apache Ranger, Apache Atlas",
    "validateBlueprint": false,
    "gateway": {
      "topologies": [
        {
          "topologyName": "dp-proxy",
          "exposedServices": [
            "ALL"
          ]
        }
      ],
      "ssoType": "SSO_PROVIDER"
    }
  },
  "customDomain": {
    "domainName": "cloudera.site",
    "hostgroupNameAsHostname": true
  },
  "instanceGroups": [
    {
      "name": "idbroker",
      "template": {
        "instanceType": "Standard_D12_v2",
        "attachedVolumes": [
          {
            "count": 1,
            "size": 100,
            "type": "Standard_LRS"
          }
        ],
        "rootVolume": {
          "size": 30
        }
      },
      "nodeCount": 1,
      "type": "CORE",
      "recoveryMode": "MANUAL",
      "recipeNames": []
    },
    {
      "name": "master",
      "template": {
        "instanceType": "Standard_D12_v2",
        "attachedVolumes": [
          {
            "count": 1,
            "size": 250,
            "type": "Standard_LRS"
          }
        ],
        "rootVolume": {
          "size": 30
        }
      },
      "nodeCount": 1,
      "type": "GATEWAY",
      "recoveryMode": "MANUAL",
      "recipeNames": []
    }
  ]
}