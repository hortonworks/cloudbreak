{
  "cluster": {
    "validateBlueprint": false
  },
  "customDomain": {
    "domainName": "sdx",
    "hostgroupNameAsHostname": true
  },
  "instanceGroups": [
    {
      "name": "idbroker",
      "template": {
        "instanceType": "Standard_D12_v2",
        "attachedVolumes": [
          {
            "count": 1,
            "size": 100,
            "type": "standard"
          }
        ],
        "rootVolume": {
          "size": 50
        }
      },
      "nodeCount": 1,
      "type": "CORE",
      "recoveryMode": "MANUAL",
      "recipeNames": [],
      "securityGroup": {
        "securityRules": [
          {
            "subnet": "0.0.0.0/0",
            "ports": [
              "22"
            ],
            "protocol": "tcp"
          }
        ]
      }
    },
    {
      "name": "master",
      "template": {
        "instanceType": "Standard_D12_v2",
        "attachedVolumes": [
          {
            "count": 1,
            "size": 100,
            "type": "standard"
          }
        ],
        "rootVolume": {
          "size": 50
        }
      },
      "nodeCount": 1,
      "type": "GATEWAY",
      "recoveryMode": "MANUAL",
      "recipeNames": [],
      "securityGroup": {
        "securityRules": [
          {
            "subnet": "0.0.0.0/0",
            "ports": [
              "9443"
            ],
            "protocol": "tcp"
          },
          {
            "subnet": "0.0.0.0/0",
            "ports": [
              "443"
            ],
            "protocol": "tcp"
          },
          {
            "subnet": "0.0.0.0/0",
            "ports": [
              "22"
            ],
            "protocol": "tcp"
          }
        ]
      }
    }
  ]
}