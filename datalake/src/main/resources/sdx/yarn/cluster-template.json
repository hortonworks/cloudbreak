{
  "cluster": {
    "validateBlueprint": false,
    "gateway": {
      "topologies": [
        {
          "topologyName": "dp-proxy",
          "exposedServices": [
            "ALL"
          ]
        }
      ],
      "ssoType": "SSO_PROVIDER"
    }
  },
  "customDomain": {
    "domainName": "sdx",
    "hostgroupNameAsHostname": true
  },
  "instanceGroups": [
    {
      "name": "idbroker",
      "template": {
        "yarn": {
          "cpus": 4,
          "memory": 16384
        }
      },
      "nodeCount": 1,
      "type": "CORE"
    },
    {
      "name": "master",
      "template": {
        "yarn": {
          "cpus": 4,
          "memory": 16384
        }
      },
      "nodeCount": 1,
      "type": "GATEWAY"
    }
  ]
}