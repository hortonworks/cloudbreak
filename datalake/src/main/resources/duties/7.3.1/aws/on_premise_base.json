{
  "cluster": {
    "blueprintName": "7.3.1 - On-premise base: Apache Hive, Apache Ranger, Apache Atlas, Spark3, Livy3",
    "validateBlueprint": false
  },
  "customDomain": {
    "domainName": "cloudera.site",
    "hostgroupNameAsHostname": true
  },
  "instanceGroups": [
    {
      "name": "ecs_master",
      "template": {
        "instanceType": "m6a.4xlarge",
        "rootVolume": {
          "size": 500
        }
      },
      "nodeCount": 1,
      "type": "CORE",
      "recoveryMode": "MANUAL"
    },
    {
      "name": "ecs_worker",
      "template": {
        "instanceType": "m6a.4xlarge",
        "rootVolume": {
          "size": 500
        }
      },
      "nodeCount": 1,
      "type": "CORE",
      "recoveryMode": "MANUAL"
    },
    {
      "name": "worker",
      "template": {
        "instanceType": "m5.4xlarge",
        "rootVolume": {
          "size": 500
        }
      },
      "nodeCount": 3,
      "type": "CORE",
      "recoveryMode": "MANUAL"
    },
    {
      "name": "idbroker",
      "template": {
        "instanceType": "t3.medium",
        "attachedVolumes": [
          {
            "count": 0,
            "type": "standard"
          }
        ]
      },
      "nodeCount": 1,
      "type": "CORE",
      "recoveryMode": "MANUAL",
      "recipeNames": []
    },
    {
      "name": "master",
      "template": {
        "instanceType": "r5.4xlarge",
        "attachedVolumes": [
          {
            "count": 1,
            "size": 512,
            "type": "gp3"
          }
        ]
      },
      "nodeCount": 1,
      "type": "GATEWAY",
      "recoveryMode": "MANUAL",
      "recipeNames": []
    }
  ]
}
