{
{{{#neq blueprint.type 'HDF'}}}
{{{#if-null kerberos}}}
{{{#if ldap}}}
  "core-site": {
    "hadoop.security.group.mapping": "org.apache.hadoop.security.LdapGroupsMapping",
    "hadoop.security.group.mapping.ldap.url": "{{{ ldap.connectionURL }}}",
    "hadoop.security.group.mapping.ldap.bind.user": "{{{ ldap.bindDn }}}",
    "hadoop.security.group.mapping.ldap.bind.password": "{{{ ldap.bindPassword }}}",
    "hadoop.security.group.mapping.ldap.userbase": "{{{ ldap.userSearchBase }}}",
    "hadoop.security.group.mapping.ldap.search.filter.user": "(&(objectClass={{{ ldap.userObjectClass }}})({{{ ldap.userNameAttribute }}}={0}))",
    "hadoop.security.group.mapping.ldap.groupbase": "{{{ ldap.groupSearchBase }}}",
    "hadoop.security.group.mapping.ldap.search.filter.group": "(objectClass={{{ ldap.groupObjectClass }}})",
    "hadoop.security.group.mapping.ldap.search.attr.group.name": "{{{ ldap.groupNameAttribute }}}",
    "hadoop.security.group.mapping.ldap.search.attr.member": "{{{ ldap.groupMemberAttribute }}}"
  }
{{{/if}}}
{{{/if-null}}}
{{{/neq}}}
}