{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DatalakeRestorePolicy",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::<your-backup-bucket>/*",
        "arn:aws:s3:::<your-backup-bucket>"
      ]
    }
  ]
}